@using MvcTest.Models;
@model List<SystemCatalog>
@{
    ViewBag.Title = "Home Page";
}
    <div>
        @{
            if (Model.Count > 0)
            {
                        foreach(SystemCatalog group in Model)
                        {
                            <div class="topic">
                                <span class="topic-title">@group.GroupName</span>
                                <div class="topic-list">
                                    @{
                                        foreach(SystemCatalogItem item in group.Item){
                                        <ul>
                                            <li><a href="@item.Url" target="@item.Target">@item.Name</a></li>
                                        </ul>
                                        }
                                    }
                                </div>
                            </div>
                        }
            }
        }
    </div>